<odoo>
  <data>
   <?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      <record id="view_alumno_request_form" model="ir.ui.view">
        <field name="name">view.alumno.alumno.form</field>
        <field name="model">alumno.alumno</field>
        <field name="arch" type="xml">
          <form name="Alumno Request Form">
              <header>
                  <button name="confirm_request" string="Confirm" class="oe_highlight" states="draft" type="object"/>
                  <button name="validate_request" string="Validate" class="oe_highlight" states="confirm" type="object">
                  <button name="approve_request" string="Approve" class="oe_highlight" states="validate" type="object">
                  <button name="refuse_request" string="Refuse" states="confirm,validate" type="object">

                  <field name="state" widget="statusbar" statusbar_visible="draft,confirm,validate"/>
              </header>
            <sheet>
              <div class="oe_title">
                  <label for="name" class="oe_edit_only"/>
                  <h1>
                      <field name="nombre1"/>
		      <field name="nombre2"/>
 		      <field name="apellido1"/>
 		      <field name="apellido2"/>
                  </h1>
              </div>
              <group>
                  <group>
                      <field name="rut"/>
                      <field name="carrera"/>
                      <field name="email" widget="email"/>
		      <field name="dom_procedencia"/>
                  </group>
                  <group>
                      <field name="dom_actual"/>	
                      <field name="telefono"/>
		      <field name="ano_ingreso"/>	
                  </group>
              </group>
            </sheet>
              <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
          </form>

        </field>
      </record>

        
        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
        <menuitem id="menu_alumno_request" name="Alumno Request" sequence="10"/>
       


    </data>
</odoo>
  </data>
</odoo>
